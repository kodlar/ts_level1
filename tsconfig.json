{
    "files": [
        "src/main.ts",
        "Src/greet.ts",
        "Src/helper/enums.ts",
        "Src/helper/config.ts"
    ],
    
    "compilerOptions": {
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es5",
        "moduleResolution": "node",
        "removeComments": true,
        "module": "commonjs",   
        "lib": ["es2015", "dom"]             
    }
}